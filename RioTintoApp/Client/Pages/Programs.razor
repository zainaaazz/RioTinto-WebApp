@page "/programs"
@using RioTintoApp.Shared
@inject HttpClient Http

<PageTitle>Programs</PageTitle>

<h1>Programs</h1>

<p>This component demonstrates fetching data from the server.</p>

<div class="full-width-image">
    <img src="images/ganttChart2.png" alt="Gantt Chart" />
</div>

<style>
    .full-width-image {
    width: 100%; /* Ensures it spans the full width of the screen */
    overflow: hidden; /* Ensures no extra content appears outside the container */
}

.full-width-image img {
    width: 100%; /* Makes the image span the full width of the screen */
    height: auto; /* Maintains the aspect ratio */
    display: block; /* Removes extra spacing below the image */
    border: 2px solid #282727; /* Adds a black border (change color as needed) */
    border-radius: 10px; /* Optional: Adds rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Optional: Adds a shadow for depth */
}
}
</style>

<div class="dropdown-container">
    <!-- Gray block for the header -->
    <div class="dropdown-header" @onclick="ToggleDropdown1">
        <span>
            <span class="oi oi-chevron-right" aria-hidden="true"></span> <!-- Optional icon -->
            Program 1: Road and Bridge Construction
        </span>
        <i class="arrow-icon" style="@(isExpanded1 ? "transform: rotate(90deg);" : "")">▶</i>
    </div>
    <!-- Gray block for the content -->
    @if (isExpanded1)
    {
        <div class="dropdown-content">
            <p><strong>Problem Addressed:</strong> Lack of reliable infrastructure limits access to education, healthcare, and economic opportunities. Poor road connectivity increases the cost of goods and delays transportation.</p>
            <p><strong>Objective:</strong> Build trust and provide immediate, tangible benefits by enhancing infrastructure.</p>

            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="top-left">Action Plan</td>
                        <td>
                            <ul>
                                <li>Conduct feasibility studies for local infrastructure projects.</li>
                                <li>Train and hire community members in construction skills.</li>
                                <li>Partner with contractors to prioritize local hiring.</li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <td class="top-left">Budget</td>
                        <td>
                            <ul>
                                <li>Equipment and tools: $2 million.</li>
                                <li>Training and hiring: $500,000.</li>
                                <li>Contractor partnerships: $1 million.</li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <td class="top-left">Timeline</td>
                        <td>
                            <ul>
                                <li>Feasibility studies: 3 months.</li>
                                <li>Construction and training: 12 months.</li>
                                <li>Maintenance framework setup: 2 months.</li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <td class="top-left">Resources Needed</td>
                        <td>
                            <ul>
                                <li>Construction equipment (e.g., graders, cement mixers).</li>
                                <li>Technical experts for feasibility studies and training.</li>
                                <li>Skilled/unskilled local labor.</li>
                                <li>Partnerships with construction companies.</li>
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>

    




<div class="dropdown-container">
